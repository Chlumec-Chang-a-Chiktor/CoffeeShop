@page
@model CoffeeShop.Pages.RateCoffeeModel
@{
}
<div class="text-center flex-column">
    <div class="flex-row">
        <div>
            <img src="~/Images/JavaCoffe.png" class="bg-dark" />
        </div>
        <div class="rating-text">
            <div class="flex-column">
                <h3>@RateCoffeeModel.Coffee.Name</h3>
            </div>
            <div>
                <h5>
                    Popis: <br />
                    @RateCoffeeModel.Coffee.Description
                </h5>
                <h3>
                    Přísady: <br />
                </h3>
                <div class="IngredientHolder">
                    <div>
                        @for (int i = 0; i < Model.SelectedIng.Count / 3; i++)
                        {
                            @Model.SelectedIng[i].Name<br />
                        }
                    </div>
                    <div>
                        
                        @for (int i = 0 + Model.SelectedIng.Count / 3 * 2; i < Model.SelectedIng.Count; i++)
                        {
                            @Model.SelectedIng[i].Name<br />
                        }
                    </div>
                    <div>
                        @for (int i = 0 + Model.SelectedIng.Count / 3; i < Model.SelectedIng.Count / 3 * 2; i++)
                        {
                            @Model.SelectedIng[i].Name<br />
                        }
                    </div>
                </div>
                

            </div>
        </div>
    </div><br />

    <input type="submit" name="pickCoffee" value="Vybrat kávu" />

    <div>
        <hr />
        <div class="rating-text">
            <h3>Ohodnoťte tuto kávu:</h3>
        </div>
        <form method="post" class="text-center">
            <label>Nadpis</label><br />
            <input type="text" asp-for="@Model.Rating.Title" /><br />
            <span class="text-danger" asp-validation-for="@Model.Rating.Title"></span><br />
            <label> Váš Text</label><br />
            <textarea asp-for="@Model.Rating.Description"></textarea><br />
            <span class="text-danger" asp-validation-for="@Model.Rating.Description"></span><br />
            <label>Bodové ohodnocení</label><br />
            <input type="number" asp-for="@Model.Rating.Points" /><br />
            <span class="text-danger" asp-validation-for="@Model.Rating.Points"></span><br />
            <input type="submit" /><br />
        </form>
    </div>

    <div class="rating-text">
        <h3>Recenze:</h3>
    </div>

    <div class="flex-column">
        @foreach (var item in Model.IndexRatings)
        {
            <div class="Rating">
                <p>
                    @item.Title <br />
                    @item.Description
                </p>
                <p>Bodové ohodnocení: @item.Points/10</p>


            </div>
        }
    </div>
</div>

@section Scripts{ 
 <partial name="_ValidationScriptsPartial" />
}
